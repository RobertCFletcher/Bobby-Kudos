          // document.getElementById("link9").remove()        
</script>
</head>

<body>

<div id='titleSpace'>
    <div id='pageTitle'>Update Account</div>
</div>

<div class="row">
  <div class="card col-sm-4 mx-auto">
      <div class="card-body">
        <h4>Current User Info</h6>
        <ul>Firstname: <%= man.firstname %> </ul>
        <ul>Lastname: <%= man.lastname %> </ul>
        <ul>Email: <%= man.email %> </ul>

          <h4>Update User Info</h4>
        <form action="/accountpass" method="post" >
          <div class="form-group row">

  
          <label class="col-sm-5 col-form-label" for="fn">Update First Name</label>
          <input class="col-sm-7 form-control-sm" type="text" id="fn" name="newfn" placeholder="<%= man.firstname %>">

          <label class="col-sm-5 col-form-label" for="ln">Update Last Name</label>
          <input class="col-sm-7 form-control-sm" type="text" id="ln" name="newln" placeholder="<%= man.lastname %>">



          <label class="col-sm-5 col-form-label" for="cpass">Current Password</label>
          <input class="col-sm-7 form-control-sm" type="password" id="cpass" name="currentpass" placeholder="Current Password" required>

          <label class="col-sm-5 col-form-label" for="pass">New Password</label>
          <input class="col-sm-7 form-control-sm" type="password" id="pass" name="newpass" placeholder="New Password" required>

          <input id="submitButton" type="submit" value="Update Account">
        </div>
        </form>
        <h6 class="text-danger"><%= msg %></h6>
      </div>
  </div>
</div>




<%- include('partials/footer') %>
<%- include('partials/footscripts') %>
</body>
</html>
