<!doctype html>


<html lang="en">

<head>
  <link href="https://fonts.googleapis.com/css?family=Spartan:400,700&display=swap" rel="stylesheet"> 
  <%- include('partials/head') %>
  <link rel="stylesheet" type="text/css" href="./assets/manager.css">
  
  <%- include('partials/navbar') %>
  <script>  document.getElementById("link2").classList.add("active") 
            document.getElementById("link1").remove()
            document.getElementById("link3").remove()
            document.getElementById("link4").remove()
            document.getElementById("link7").remove()
  </script>
</head>

<body>
  <div id='insidePage'>
  
    <div id='titleSpace'>
      <div id='pageTitle'>Awards History</div>
	</div>

    <div id='tables'>
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th>  Previous awards </th>
          </tr>
          <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Region</th>
            <th>Award</th>
            <th>Recipient</th>
            <th>Email</th>
            <th>Delete</th>
          </tr>
        </thead>
          <tbody>
            <%        awardData.forEach(function(ele, i){     %>
              <tr>
                <td> <%= awardData[i].id %> </td> 
                <td> <%= awardData[i].createdon.Time %> </td>
                <td> <%= awardData[i].region.regionname %> </td>
                <td> <%= awardData[i].type %> </td>
                <td> <%= awardData[i].recipientname %> </td>
                <td> <%= awardData[i].recipientemail %> </td>
                <td><a href="/manager/deleteaward/<%=awardData[i].id%>">Delete</a></td>
              </tr>  
            <%        });                                    %>
          </tbody>
      
      
      </table>
    </div>
    
    <br>
    <br>

  <%- include('partials/footer') %>
  <%- include('partials/footscripts') %>
</body>
</html>
