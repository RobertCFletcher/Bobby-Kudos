<!doctype html>

<html lang="en">

<head>
  <link href="https://fonts.googleapis.com/css?family=Spartan:400,700&display=swap" rel="stylesheet"> 
  <%- include('partials/head') %>
  <link rel="stylesheet" type="text/css" href="./assets/createAward.css">
  
  <%- include('partials/navbar') %>
  <script>  document.getElementById("link2").classList.add("active") 
            document.getElementById("link1").remove()
            document.getElementById("link3").remove()
			document.getElementById("link8").remove()
  </script>
</head>

<body>

  <div id='titleSpace'>
    <div id='pageTitle'>Create an Award</div>
  </div>
  
  <div id='awardInfo'>
    <form action="/awards" method="POST">
	  <div class='container'>
	    <label for="selectRegion">Select Region:</label>
		<select class="custom-select" id="selectRegion" name="region" required>
		  <option selected disabled>Choose Region...</option>
		    <%        regions.forEach(function(ele, i){       %>
		  <option value="<%= ele.regionid %>">
		    <%=     ele.regionname                           %> 
            <%        })       %>
		  </option>
		</select>
	  </div>
	  <div class='container'>
	    <label for="typ"> Award: </label>
        <input type="text" id="typ" name="type" placeholder="Award Type" >
	  </div>
	  <div class='container'>
	    <label for="name"> Recipient Name: </label>
        <input type="text" id="name" name="recipientname" placeholder="Full Name" >
	  </div>
	  <div class='container'>
	    <label for="email1"> Recipient Email: </label>
        <input type="email" id="email1" name="recipientemail" placeholder="Recipient Email" >
	  </div>
	  <br>
	  <button id='submitButton' type="Submit" value="admin">Create Award</button> 
	</form>
  </div>

  <%- include('partials/footer') %>
  <%- include('partials/footscripts') %>
</body>
</html>
